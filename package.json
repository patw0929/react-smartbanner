{
  "name": "@coorpacademy/react-smartbanner",
  "version": "5.1.4",
  "description": "Smart app banner react version.",
  "repository": {
    "type": "git",
    "url": "https://github.com/Coorpacademy/react-smartbanner"
  },
  "bugs": {
    "url": "https://github.com/Coorpacademy/react-smartbanner/issues"
  },
  "main": "dist/SmartBanner.js",
  "peerDependencies": {
    "react": "16.x",
    "react-dom": "16.x"
  },
  "dependencies": {
    "cookie-cutter": "^0.2.0",
    "cookies-js": "^1.2.1",
    "prop-types": "^15.7.2",
    "react-smartbanner": "^5.1.4",
    "ua-parser-js": "^0.7.21"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.1",
    "@babel/preset-react": "^7.10.1",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.0.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^7.1.0",
    "eslint-config-airbnb": "~18.1.0",
    "eslint-config-airbnb-base": "~14.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-security": "^1.3.0",
    "jest": "^26.0.1",
    "jest-css-modules-transform": "^4.0.0",
    "jsdom": "^16.2.2",
    "parcel-bundler": "^1.12.4",
    "pre-commit": "^1.2.2",
    "prettier": "^2.0.5",
    "react": "16.x",
    "react-dom": "16.x"
  },
  "scripts": {
    "build": "babel src/lib --out-dir dist -s --copy-files",
    "start": "parcel src/index.html",
    "lint:fix": "npm run lint -- --fix",
    "lint": "eslint src --fix",
    "test": "jest",
    "coverage": "yarn run test -- --coverage",
    "coveralls": "NODE_ENV=development cat coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "prettier:all": "prettier --write 'src/example.js' 'src/lib/**/*.js' 'config/**/*.js'"
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/__mocks__/**",
      "!**/__tests__/**",
      "!src/example.js"
    ],
    "testURL": "http://localhost",
    "verbose": true,
    "transform": {
      "^.+\\.js$": "babel-jest",
      ".+\\.(css|styl|less|sass|scss)$": "jest-css-modules-transform"
    },
    "globals": {
      "NODE_ENV": "test"
    },
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "setupTestFrameworkScriptFile": "./setupTests.js",
    "testEnvironment": "jsdom"
  },
  "keywords": [
    "react",
    "component",
    "smartbanner",
    "ios",
    "iphone",
    "android",
    "windowsphone",
    "smart",
    "banner"
  ],
  "author": "patw <patw.hi@gmail.com> (http://patw.me/)",
  "engines": {
    "node": "^12.17.0",
    "npm": "^6.14.4",
    "yarn": "^1.12.3"
  },
  "license": "MIT"
}
